{% extends "base.html.twig"%}

{% block title %} Home {%endblock%}

{%block body %} 
   <table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name of Cathegorie</th>
    </tr>
  </thead>
   {% for cathegorie in cathegories %}
  <tbody class="table-group-divider">
    <tr>
      <th scope="row">{{cathegorie.id}}</th>
      <td>{{cathegorie.name}}</td>
      <td>
      <td><a href="{{path('show_cathegorie',{'id': cathegorie.id} )}}"><i class="fa-solid fa-eye"></i></a>
      </td>
    </tr>
  </tbody>
    {% endfor %}
</table>

{% endblock%}